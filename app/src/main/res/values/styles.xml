<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackGround</item>
        <item name="colorPrimaryDark">@color/colorTexts</item>
        <item name="colorAccent">@color/colorEnablePurple</item>
    </style>

    <style name="AppSwitchBehavior" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorGreen</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorDisplayGray
        </item>
    </style>
</resources>
